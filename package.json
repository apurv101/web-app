{
	"name": "web-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest",
		"lint": "npm run lint:eslint -- '**/*.{js,jsx,ts,tsx,json}'",
		"lint:fix": "npm run lint -- --fix",
		"lint:eslint": "eslint --ignore-path .gitignore",
		"prepare": "husky",
		"clean": "rm -rf node_modules .next next-env.d.ts .husky"
	},
	"dependencies": {
		"@emotion/cache": "^11.11.0",
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.5",
		"@mui/material": "^5.16.1",
		"@mui/material-nextjs": "^5.16.1",
		"next": "14.2.5",
		"react": "^18",
		"react-dom": "^18"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/parser": "^7.3.1",
		"eslint": "^8",
		"eslint-config-next": "14.2.5",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^28.6.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.3",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^4.0.0",
		"typescript": "^5.5.3"
	},
	"eslintConfig": {
		"env": {
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"extends": [
			"eslint:recommended",
			"next/core-web-vitals",
			"plugin:react/jsx-runtime",
			"plugin:json/recommended",
			"plugin:prettier/recommended"
		],
		"rules": {
			"no-empty": [
				"error",
				{
					"allowEmptyCatch": true
				}
			]
		},
		"overrides": [
			{
				"files": [
					"test/**",
					"**/__tests__/**",
					"**/*.test.js"
				],
				"plugins": [
					"jest"
				],
				"extends": [
					"plugin:jest/recommended",
					"plugin:jest/style"
				]
			}
		]
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 2,
		"plugins": [
			"prettier-plugin-organize-imports"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": [
			"npm run lint:eslint -- --fix"
		]
	}
}
